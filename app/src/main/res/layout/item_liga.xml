<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@drawable/content_liga_bg"
    android:layout_margin="4dp">

    <!-- ID de la liga -->
    <TextView
        android:id="@+id/ligaIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Liga"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Nombre de la liga -->
    <TextView
        android:id="@+id/ligaNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liga Nombre"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ligaIdTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Nombres alternativos de la liga -->
    <TextView
        android:id="@+id/ligaAltNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres Alternativos"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/ligaNameTextView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
