<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/content_liga_bg"
    android:backgroundTint="@color/white"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- ID de la liga -->
    <TextView
        android:id="@+id/ligaIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Liga"
        android:textSize="12sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Nombre de la liga -->
    <TextView
        android:id="@+id/ligaNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Liga Nombre"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/ligaIdTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Nombres alternativos de la liga -->
    <TextView
        android:id="@+id/ligaAltNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombres Alternativos"
        android:textSize="14sp"
        android:textColor="@color/gray_dark"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/ligaNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
